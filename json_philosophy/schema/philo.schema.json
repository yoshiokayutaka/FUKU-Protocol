{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FUKU Philosophy JSON",
  "type": "object",
  "required": [
    "id",
    "lang",
    "title",
    "tags",
    "body",
    "source",
    "v"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9\\-]{10,}$"
    },
    "lang": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "body": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "t",
          "v"
        ],
        "properties": {
          "t": {
            "type": "string"
          },
          "v": {
            "type": "string"
          },
          "ref": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "source": {
      "type": "object",
      "required": [
        "author",
        "project",
        "license"
      ],
      "properties": {
        "author": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rel": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        },
        "required": [
          "rel",
          "id"
        ],
        "additionalProperties": false
      }
    },
    "signature": {
      "type": "string"
    },
    "v": {
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}
